{
  "name": "@natlibfi/fixura-mongo",
  "description": "Test fixtures with MongoDB is as easy as ABC",
  "author": {
    "name": "The National Library of Finland"
  },
  "keywords": [
    "fixture",
    "test",
    "unit",
    "mongo",
    "gridfs"
  ],
  "homepage": "https://github.com/natlibfi/fixura-mongo-js",
  "bugs": {
    "url": "https://github.com/natlibfi/fixura-mongo-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:natlibfi/fixura-mongo-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "version": "3.0.0-alpha.1",
  "main": "src/index.mjs",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "lint": "eslint ./src",
    "lint:dev": "eslint --fix ./src",
    "test:base": "node --test --test-force-exit --experimental-test-coverage --test-reporter=spec",
    "test:only": "node --test --test-only --test-force-exit --experimental-test-coverage --test-reporter=spec",
    "test": "npm run lint && npm run test:base",
    "watch:test": "cross-env DEBUG=@natlibfi/* NODE_ENV=test node --watch --test --experimental-test-coverage --test-reporter=spec",
    "dev": "npm run watch:test",
    "dev:debug": "cross-env LOG_LEVEL=debug DEBUG=@natlibfi/* NODE_ENV=test npm run watch:test"
  },
  "dependencies": {
    "@natlibfi/fixura": "^4.0.0-alpha.2",
    "mongodb": "^6.17.0",
    "mongodb-memory-server": "^10.1.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1"
  },
  "eslintConfig": {
    "extends": "@natlibfi/melinda-backend"
  }
}
