{
  "name": "@natlibfi/fixura-mongo",
  "description": "Test fixtures with MongoDB is as easy as ABC",
  "author": {
    "name": "The National Library of Finland"
  },
  "keywords": [
    "fixture",
    "test",
    "unit",
    "mongo",
    "gridfs"
  ],
  "homepage": "https://github.com/natlibfi/fixura-mongo-js",
  "bugs": {
    "url": "https://github.com/natlibfi/fixura-mongo-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:natlibfi/fixura-mongo-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "version": "2.0.18",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "babel src --source-maps --delete-dir-on-start --out-dir=dist",
    "lint": "eslint src",
    "lint:dev": "eslint --fix src",
    "prepare": "npm run build",
    "test": "npm run lint && npm run test:base",
    "test:base": "cross-env NODE_ENV=test nyc mocha --package package.json --exit",
    "test:dev": "npm run lint:dev && npm run test:base",
    "watch": "cross-env DEBUG=@natlibfi/* NODE_ENV=test nodemon"
  },
  "dependencies": {
    "@babel/register": "^7.24.6",
    "@natlibfi/fixura": "^3.0.7",
    "mongodb": "^6.8.0",
    "mongodb-memory-server": "^10.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/eslint-parser": "^7.24.7",
    "@babel/node": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@natlibfi/eslint-config-melinda-backend": "^3.0.5",
    "babel-plugin-istanbul": "^6.1.1",
    "chai": "^4.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "mocha": "^10.6.0",
    "nodemon": "^3.1.4",
    "nyc": "^15.1.0"
  },
  "eslintConfig": {
    "extends": "@natlibfi/melinda-backend"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": [
            "last 2 versions",
            "maintained node versions"
          ]
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "mocha": {
    "spec": [
      "src/*.spec.js"
    ],
    "require": [
      "@babel/register"
    ],
    "bail": true
  },
  "nodemonConfig": {
    "exec": "npm run test:dev",
    "watch": [
      "src/*",
      "test-fixtures/*"
    ]
  },
  "nyc": {
    "exclude": [
      "src/*.spec.js"
    ],
    "reporter": [
      "text"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
  }
}