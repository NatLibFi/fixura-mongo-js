{
  "name": "@natlibfi/fixura-mongo",
  "description": "Test fixtures with MongoDB is as easy as ABC",
  "author": {
    "name": "The National Library of Finland"
  },
  "keywords": [
    "fixture",
    "test",
    "unit",
    "mongo",
    "gridfs"
  ],
  "homepage": "https://github.com/natlibfi/fixura-mongo-js",
  "bugs": {
    "url": "https://github.com/natlibfi/fixura-mongo-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:natlibfi/fixura-mongo-js.git"
  },
  "license": "MIT",
  "version": "3.0.0-alpha.2",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:cjs && npm run build:mjs",
    "build:cjs": "esbuild src/**/*.mjs --sourcemap --platform=node --main-fields=main --outdir=dist --allow-overwrite --analyze",
    "build:mjs": "esbuild src/**/*.mjs --sourcemap --platform=node --main-fields=module --outdir=dist --allow-overwrite --out-extension:.js=.mjs --format=esm",
    "lint": "eslint ./src",
    "lint:dev": "eslint --fix ./src",
    "test:base": "node --test --test-force-exit --experimental-test-coverage --test-reporter=spec",
    "test:only": "node --test --test-only --test-force-exit --experimental-test-coverage --test-reporter=spec",
    "test": "npm run lint && npm run test:base",
    "watch:test": "cross-env DEBUG=@natlibfi/* NODE_ENV=test node --watch --test --experimental-test-coverage --test-reporter=spec",
    "dev": "npm run watch:test",
    "dev:debug": "cross-env LOG_LEVEL=debug DEBUG=@natlibfi/* NODE_ENV=test npm run watch:test"
  },
  "dependencies": {
    "@natlibfi/fixura": "^4.0.0-alpha.8",
    "mongodb": "^6.17.0",
    "mongodb-memory-server": "^10.1.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "esbuild": "0.25.6",
    "eslint": "^9.30.1"
  }
}
